<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calculadorapromedio.luiscaicedo.calculadorapromedio_luiscaicedo.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notas"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/etnota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nota 1"
            android:inputType="numberDecimal"
            android:paddingTop="35dp" />

        <EditText
            android:id="@+id/etnota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nota 2"
            android:inputType="numberDecimal"
            android:paddingTop="35dp" />

        <EditText
            android:id="@+id/etnota3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nota 3"
            android:inputType="numberDecimal"
            android:paddingTop="35dp" />

        <EditText
            android:id="@+id/etnota4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nota 4"
            android:inputType="numberDecimal"
            android:paddingTop="35dp" />

        <Button
            android:id="@+id/bcalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Promedio" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Promedio:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tpromedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingTop="35dp"
                android:text="TextView"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
